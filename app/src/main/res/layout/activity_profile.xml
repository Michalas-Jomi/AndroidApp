<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <ImageView
            android:layout_width="337dp"
            android:layout_height="651dp" app:srcCompat="@drawable/hero" android:id="@+id/profile_hero_ImageView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@drawable/games_icon"
            android:id="@+id/profile_games_ImageView"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/profile_realActivity_ImageView"
            app:layout_constraintStart_toEndOf="@+id/profile_shop_ImageView"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@drawable/real_activity_icon"
            android:id="@+id/profile_realActivity_ImageView"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@drawable/shop_icon"
            android:id="@+id/profile_shop_ImageView"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
            android:layout_width="81dp"
            android:layout_height="222dp" app:srcCompat="@drawable/dress1" android:id="@+id/profile_cloth_dress_ImageView"
            app:layout_constraintTop_toTopOf="@+id/profile_hero_ImageView"
            app:layout_constraintBottom_toBottomOf="@+id/profile_hero_ImageView"
            app:layout_constraintStart_toStartOf="@+id/profile_hero_ImageView"
            app:layout_constraintEnd_toEndOf="@+id/profile_hero_ImageView" app:layout_constraintHorizontal_bias="0.535"
            app:layout_constraintVertical_bias="0.58" android:visibility="invisible"/>
    <ImageView
            android:layout_width="73dp"
            android:layout_height="103dp" app:srcCompat="@drawable/pants2" android:id="@+id/profile_cloth_pants_ImageView"
            app:layout_constraintBottom_toBottomOf="@+id/profile_hero_ImageView"
            app:layout_constraintTop_toTopOf="@+id/profile_hero_ImageView"
            app:layout_constraintEnd_toEndOf="@+id/profile_hero_ImageView"
            app:layout_constraintStart_toStartOf="@+id/profile_hero_ImageView"
            app:layout_constraintHorizontal_bias="0.518" app:layout_constraintVertical_bias="0.614"
            android:visibility="invisible"/>
    <TextView
            android:text="Energia: 0000000"
            android:layout_width="wrap_content"
            android:layout_height="25dp" android:id="@+id/profile_energy_TextView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:textSize="18sp"/>
    <TextView
            android:text="Monety: 1000000"
            android:layout_width="wrap_content"
            android:layout_height="25dp" android:id="@+id/profile_money_TextView"
            app:layout_constraintTop_toBottomOf="@+id/profile_energy_TextView"
            android:textSize="18sp" app:layout_constraintStart_toEndOf="@+id/imageView2"/>
    <ImageView
            android:layout_width="30dp"
            android:layout_height="25dp" app:srcCompat="@drawable/moneta"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_energy_TextView"
            app:layout_constraintBottom_toBottomOf="@+id/profile_money_TextView" android:id="@+id/imageView2"/>
</androidx.constraintlayout.widget.ConstraintLayout>